#!/bin/bash

set -e

if [[ "$1" = "configure" ]]; then

git clone https://github.com/ohmyzsh/ohmyzsh.git /etc/skel/.oh-my-zsh || true

#Check if all Kaisen Linux default profile has already copied on root user, if not exists, copying Kaisen Linux default profile
if [[ ! -e /root/.config && ! -e /root/.face && ! -e /root/.local/share/konsole && ! -e /root/.zshrc && ! -e /root/kde && ! -e /root/.gtkrc-2.0 && ! -e /root/.face.icon && ! -e /root/.oh-my-zsh ]]; then
	cp -rf /usr/share/kaisen-skeleton/{.config,.face,.local,.zshrc,.kde,.gtkrc-2.0} /root || true
	ln -s /root/.face /root/.face.icon || true
	git clone https://github.com/ohmyzsh/ohmyzsh.git /root/.oh-my-zsh || true
else
	echo "Default profile has already been copying on /root. No copying."
fi

#Copying new default profile on ./etc/skel for all non root users
cp -rf /usr/share/kaisen-skeleton/{.config,.face,.zshrc,.local,.kde,.gtkrc-2.0,Desktop} /etc/skel || true
for users in $(awk -F: '/\/home/ {printf "%s:%s\n",$1,$3}' /etc/passwd | cut -d: -f1)
do
ln -s /home/$users/.face /home/$users/.face.icon 2> /dev/null || true
done
rm -rf /usr/share/kaisen-skeleton || true
fi

#DEBHELPER#
